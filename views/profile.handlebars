<nav class="white">
    <div class= "nav-wrapper">
        <a href="/about" class="brand-logo center black-text">Chuck's Tees</a>
        <ul id="nav-mobile" class="center-align">
            <li><a href="/about" class="navAbout">Home</a></li>
            <li><a href="/profile" class="navProfile">Profile</a></li>
            <li><a href="/placeorder" class="navLogin">Place Order</a></li>
            <li><a href="/logout" class="navSignup">Logout</a></li>
        </ul>
    </div>
</nav>

<div class="login-image z-depth-5">
        <div class="container center" id="profileContainer">
        <div class=“card”>
            <div class="center">
                <h3 class="center red-text" id="orderCard">User Profile</h3>
                <strong>Username</strong>: {{user.username }}<br>
                <strong>First Name</strong>: {{ user.user_first_name }}<br>
                <strong>Last Name</strong>: {{ user.user_last_name }}<br>
                <strong>Phone Number</strong>: {{ user.user_number }}<br>
                <strong>Email</strong>: {{ user.user_email }}<br>
            </div>
            <div class="center">
                <h3 class =“center”>Order History</h3>
            </div>
        </div>

            {{#each orders}}

            <div class ="row">

                <div class = "col s3">

                </div>
                <div class="card center col s6 z-depth-4" id="orderCard">

                        <div class=“center”>
                            <strong>Size: </strong>{{this.size }}<br>
                            <strong>Type of Shirt: </strong> {{ this.shirt_type }}<br>
                            <strong>Color: </strong> {{this.color}}<br>
                            <strong>Quantity: </strong>{{this.quantity}}<br>
                            <strong>Price: </strong> {{this.price}}<br>
                        </div>
                </div>
            </div>
            {{/each}}

    </div>
</div>

